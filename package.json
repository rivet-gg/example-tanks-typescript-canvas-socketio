{
    "name": "tanks-typescript-canvas-socketio",
    "version": "1.0.0",
    "description": "",
    "scripts": {
        "start": "concurrently --kill-others \"npm:start:server\" \"npm:watch:client\"",
        "start:server": "kill-port 5000 && ts-node -r dotenv/config server/index.ts",
        "watch": "npm install && concurrently --kill-others \"npm:watch:server\" \"npm:watch:client\"",
        "watch:server": "kill-port 5000 && nodemon -r dotenv/config --delay 1 --watch server --watch shared --ext ts --exec ts-node server/index.ts",
        "watch:client": "kill-port 8080 && webpack serve --no-stats",
        "build:client": "webpack",
        "build:server": "tsc --project tsconfig.json",
        "format": "prettier --write client/ server/ shared/",
        "lint": "eslint ."
    },
    "author": "",
    "license": "MIT",
    "dependencies": {
        "node-fetch": "^2.6.1",
        "socket.io": "^4.0.1"
    },
    "devDependencies": {
        "@types/react": "^17.0.4",
        "@types/react-dom": "^17.0.3",
        "@typescript-eslint/eslint-plugin": "^5.34.0",
        "@typescript-eslint/parser": "^5.34.0",
        "concurrently": "^6.2.0",
        "dotenv": "^5.0.1",
        "dotenv-webpack": "^7.0.3",
        "eslint": "^8.22.0",
        "html-webpack-plugin": "^5.3.1",
        "kill-port": "^1.6.1",
        "nodemon": "^2.0.7",
        "prettier": "^2.7.1",
        "socket.io-client": "^4.0.1",
        "ts-loader": "^9.2.3",
        "ts-node": "^9.1.1",
        "typescript": "^4.7.4",
        "webpack": "^5.39.0",
        "webpack-cli": "^4.7.2",
        "webpack-dev-server": "^3.11.2"
    }
}
