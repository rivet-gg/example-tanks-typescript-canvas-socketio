{
    "name": "tanks-typescript-canvas-socketio",
    "version": "1.0.0",
    "description": "",
    "scripts": {
        "watch": "npm install && npx concurrently --kill-others \"npm:watch-server\" \"npm:watch-client\"",
        "run": "npx concurrently --kill-others \"npm:run-server\" \"npm:watch-client\"",
        "watch-server": "npx kill-port 5000 && nodemon -r dotenv/config --delay 1 --watch server --watch shared --ext ts --exec ts-node server/index.ts",
        "run-server": "npx kill-port 5000 && ts-node -r dotenv/config server/index.ts",
        "watch-client": "npx kill-port 8080 && npx webpack serve --no-stats",
        "build-client": "npx webpack",
        "build-server": "npx -p typescript tsc --project tsconfig.json"
    },
    "author": "",
    "license": "MIT",
    "dependencies": {
        "@rivet-gg/api-game": "^0.0.4",
        "kill-port": "^1.6.1",
        "node-fetch": "^2.6.1",
        "socket.io": "^4.0.1",
        "socket.io-client": "^4.0.1"
    },
    "devDependencies": {
        "@types/react": "^17.0.4",
        "@types/react-dom": "^17.0.3",
        "concurrently": "^6.2.0",
        "dotenv": "^5.0.1",
        "dotenv-webpack": "^7.0.3",
        "html-webpack-plugin": "^5.3.1",
        "nodemon": "^2.0.7",
        "ts-loader": "^9.2.3",
        "ts-node": "^9.1.1",
        "typescript": "^4.3.2",
        "webpack": "^5.39.0",
        "webpack-cli": "^4.7.2",
        "webpack-dev-server": "^3.11.2"
    }
}
